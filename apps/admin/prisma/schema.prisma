  eventTimestamp DateTime @default(now()) @map("event_timestamp")
  createdAt      DateTime @default(now()) @map("created_at")

  @@index([campaignId])
  @@index([subscriberId])
  @@index([email])
  @@index([eventType])
  @@index([eventTimestamp(sort: Desc)])
  @@index([providerMessageId])
  @@map("email_events")
}

