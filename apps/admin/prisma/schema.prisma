  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  emailEvents EmailEvent[]

  @@index([email])
  @@index([status])
  @@index([confirmationToken])
  @@index([hubspotContactId])
  @@index([createdAt(sort: Desc)])
  @@map("newsletter_subscribers")
}

// Email campaigns
