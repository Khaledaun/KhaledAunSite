# Staging Environment Variables
# Copy this file to .env.staging and fill in your actual values
# NEVER commit the actual .env.staging file to version control

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project settings > API (staging project)
NEXT_PUBLIC_SUPABASE_URL=https://your-staging-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-staging-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-staging-supabase-service-role-key-here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Supabase PostgreSQL connection string (staging database)
DATABASE_URL=postgresql://postgres:[YOUR-STAGING-PASSWORD]@db.[YOUR-STAGING-PROJECT-REF].supabase.co:5432/postgres

# =============================================================================
# NEXT.JS CONFIGURATION
# =============================================================================
NODE_ENV=staging
NEXTAUTH_URL=https://your-staging-domain.vercel.app
NEXTAUTH_SECRET=your-staging-nextauth-secret-here

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Sentry configuration for error tracking (staging environment)
SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project-staging
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate limiting configuration (more lenient for staging)
RATE_LIMIT_MAX=200
RATE_LIMIT_WINDOW_MS=900000

# CORS configuration (staging domains)
ALLOWED_ORIGINS=https://your-staging-domain.vercel.app,https://preview.your-domain.vercel.app

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features in staging
ENABLE_ANALYTICS=false
ENABLE_ERROR_REPORTING=true
ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email service configuration (staging/test emails)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=staging@your-domain.com
SMTP_PASS=your-staging-email-password

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Vercel deployment configuration
VERCEL_URL=your-staging-url.vercel.app
VERCEL_ENV=preview
